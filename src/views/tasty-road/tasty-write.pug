extends ../home.pug

block content
    div.tasty-wrap
        div.tasty-wrap__header
            span.tasty-wrap__title 맛집 공유하기
        div.tasty-wrap__main
            form.tasty-wrap__main-form(action="" method="post" enctype="multipart/form-data")
                input.tasty-wrap__main-form__title(type="text" placeholder="제목" name="title")
                label(for="img1") 이미지는 최대 5개 업로드 가능합니다.
                input(type="file" accept="image/*" name="img1" id="img1") 
                input(type="file" accept="image/*" name="img2" id="img2") 
                input(type="file" accept="image/*" name="img3" id="img3") 
                input(type="file" accept="image/*" name="img4" id="img4") 
                input(type="file" accept="image/*" name="img5" id="img5") 
                textarea.tasty-wrap__main-form__text(name="description" rows="20" cols="100")
                input.tasty-wrap__main-form__submit(type="submit" value="작성")